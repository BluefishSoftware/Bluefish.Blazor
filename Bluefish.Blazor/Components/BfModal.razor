<div class="modal"
     id="@Id"
     tabindex="-1">
    <div class="modal-dialog @ModalSizeCssClass">
        <div class="modal-content">
            <div class="modal-header">
                @if (Header is null)
                {
                    <h5 class="modal-title">@Title</h5>
                    @if (ShowCloseButton)
                    {
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    }
                }
                else
                {
                    <div>
                        @Header
                    </div>
                }
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                @if(Footer is null)
                {
                    <div>
                        @if (ShowSave)
                        {
                            <BfButton IconCssClass="fas fa-save"
                                      Click="Save"
                                      CssClass="btn-primary me-1"
                                      Enabled="SaveEnabled"
                                      Text="@SaveText" />
                        }
                        <BfButton IconCssClass="fas fa-times"
                                  Click="Cancel"
                                  Text="@CancelText" />
                    </div>
                }
                else
                {
                    <div>
                        @Footer
                    </div>
                }
            </div>
        </div>
    </div>
</div>