@inherits BfComponentBase

@if (string.IsNullOrWhiteSpace(Url))
{
    <button @attributes="ActualAttributes"
        aria-pressed="false"
        autocomplete="off"
        data-toggle="button"
        id="@Id"
        title="@(string.IsNullOrWhiteSpace(Title) ? Text : Title)"
        type="@(IsSubmit ? "submit" : "button")"
        @onclick="Click"
        @onclick:preventDefault="PreventDefault"
        @onclick:stopPropagation="StopPropagation">

        @if (ChildContent is null)
        {
            <BfLabel IconCssClass="@IconCssClass"
             Text="@Text"
             TextCssClass="@TextCssClass"
             Title="@Title">
            </BfLabel>
        }
        else
        {
            @ChildContent
        }

    </button>
}
else
{
    <a @attributes="ActualAttributes"
   id="@Id"
   href="@Url"
   target="@UrlTarget"
   title="@(string.IsNullOrWhiteSpace(Title) ? Text : Title)">
        @if (ChildContent is null)
        {
            <BfLabel IconCssClass="@IconCssClass"
             Text="@Text"
             TextCssClass="@TextCssClass"
             Title="@Title">
            </BfLabel>
        }
        else
        {
            @ChildContent
        }
    </a>
}