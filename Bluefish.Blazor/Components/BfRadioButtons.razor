@using System.Linq;
<div @attributes="AdditionalAttributes">
    <div aria-label="Basic radio toggle button group"
         class="btn-group"
         role="group">
        @{
            var idx = 0;
        }
        @foreach (var option in Options.ToArray())
        {
            <input @attributes="ItemAttributes(option)"
                   autocomplete="off"
                   class="btn-check"
                   id="@($"{Id}-{++idx}")"
                   @onclick="@(async () => await OnItemClick(option).ConfigureAwait(true))"
                   type="radio" />
            <label class="@OptionCssClass @ButtonSizeCssClass"
                   title="@option.ToolTip"
                   for="@($"{Id}-{idx}")">@option.Text</label>
            }
    </div>
</div>