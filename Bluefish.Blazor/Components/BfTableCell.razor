<div class="table-cell @(EditOptions.IsEditable ? "editable" : "")"
     id="@Id"
     @onclick="OnClick">

    @if (!_isEditing && CopyToClipboard == CopyToClipboardAlignments.Left)
    {
        <BfCopyToClipboardButton CssClass="me-1" FetchData="() => DisplayValue" />
    }

    <span class="label" id="@LabelId">
        @if (string.IsNullOrWhiteSpace(DisplayValue))
        {
            <span>&nbsp;</span>
        }
        else
        {
            @DisplayValue
        }
    </span>

    <input id="@EditorId"
           class="d-none @CssClass"
           autocomplete="off"
           @onblur="OnInputBlur"
           @onclick:stopPropagation />

    @if (!_isEditing && CopyToClipboard == CopyToClipboardAlignments.Right)
    {
        <BfCopyToClipboardButton CssClass="ms-1" FetchData="() => DisplayValue" />
    }

</div>