<div class="table-cell @(EditOptions.IsEditable ? "editable" : "")"
     id="@Id"
     @onclick="OnClick">

    <span id="@LabelId">@DisplayValue</span>

    <input id="@EditorId"
           class="d-none @CssClass"
           autocomplete="off"
           @onblur="OnInputBlur"
           @onclick:stopPropagation />

</div>